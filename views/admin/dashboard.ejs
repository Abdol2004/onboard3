                    fetch('/admin/api/quests/stats').then(r => r.json()).catch(() => ({active: 0})),
                    fetch('/admin/api/events/stats').then(r => r.json()).catch(() => ({upcoming: 0})),
                    fetch('/admin/api/applications/stats').then(r => r.json()).catch(() => ({pending: 0}))
